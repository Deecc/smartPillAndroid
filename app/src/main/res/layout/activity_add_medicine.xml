<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.dvlupit.smartpill.activities.AddMedicine">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollViewAddMedicine" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Nome do medicamento"
                android:id="@+id/textViewNomeMedicamento"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:gravity="center_horizontal" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editTextMedNome"
                android:layout_below="@+id/textViewNomeMedicamento"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Pricípio ativo"
                android:id="@+id/textViewActiveIngredient"
                android:layout_below="@+id/editTextMedNome"
                android:layout_alignRight="@+id/textViewNomeMedicamento"
                android:layout_alignEnd="@+id/textViewNomeMedicamento"
                android:gravity="center_horizontal" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editTextActiveIngredient"
                android:layout_below="@+id/textViewActiveIngredient"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Fabricante"
                android:id="@+id/textViewManufacturer"
                android:layout_below="@+id/editTextActiveIngredient"
                android:layout_alignRight="@+id/textViewActiveIngredient"
                android:layout_alignEnd="@+id/textViewActiveIngredient"
                android:gravity="center_horizontal" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editTextMedFabricante"
                android:layout_below="@+id/textViewManufacturer"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Forma de apresentação"
                android:id="@+id/textViewAvailability"
                android:layout_below="@+id/editTextMedFabricante"
                android:layout_alignRight="@+id/textViewActiveIngredient"
                android:layout_alignEnd="@+id/textViewActiveIngredient"
                android:gravity="center_horizontal" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editTextAvailability"
                android:layout_below="@+id/textViewAvailability"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Quantidade"
                android:id="@+id/textViewQuantiity"
                android:layout_below="@+id/editTextAvailability"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="false"
                android:gravity="center_horizontal" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editTextMedQuantidade"
                android:layout_below="@+id/textViewQuantiity"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
