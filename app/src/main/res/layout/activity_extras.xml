<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.dvlupit.smartpill.activities.ExtrasActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none"
        android:layout_weight="1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="5dp">
        <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="fill_parent"
            android:orientation="vertical">


         <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:stretchColumns="*"
            android:id="@+id/tableLayout"

        android:touchscreenBlocksFocus="true">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:id="@+id/tblRowPerfil">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:id="@+id/imageView"
                android:src="@drawable/sp_icon_perfil"
                android:layout_column="0"
                android:layout_marginTop="7dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Perfil"
                android:id="@+id/textView3"
                android:textAlignment="center"
                android:onClick="setContentView"
                android:layout_column="1"
                android:paddingTop="22dp"
                android:paddingLeft="5dp" />


        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tblRowPlanTrip">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:id="@+id/imageView2"
                android:src="@drawable/sp_icon_planejamento2"
                android:layout_column="0"
                android:layout_marginTop="7dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Planejamento de viagem"
                android:id="@+id/textView6"
                android:layout_column="1"
                android:paddingTop="22dp"
                android:paddingLeft="5dp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tblRowReminder">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:id="@+id/imageView3"
                android:src="@drawable/sp_icon_lembretes2"
                android:layout_marginTop="7dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Lembretes"
                android:id="@+id/textView5"
                android:layout_column="1"
                android:paddingTop="22dp"
                android:paddingLeft="5dp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tblRowHistory">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:id="@+id/imageView4"
                android:src="@drawable/sp_icon_historico"
                android:layout_column="0"
                android:layout_marginTop="7dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="HistÃ³rico"
                android:id="@+id/textView4"
                android:layout_column="1"
                android:paddingTop="22dp"
                android:paddingLeft="5dp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tblRowRecipe">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:id="@+id/imageView5"
                android:src="@drawable/sp_icon_receita"
                android:layout_column="0"
                android:layout_marginTop="7dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Receitas"
                android:id="@+id/textView7"
                android:layout_column="1"
                android:paddingTop="22dp"
                android:paddingLeft="5dp" />
        </TableRow>

        </TableLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
