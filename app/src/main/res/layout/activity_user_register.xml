<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.dvlupit.smartpill.activities.UserRegister"
    android:id="@+id/RelLayoutUserRegister">


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollViewUserRegister"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:fillViewport="false" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Nome"
                android:id="@+id/textViewNameUser"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editTextNameUser"
                android:layout_below="@+id/textViewNameUser"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Email"
                android:id="@+id/textViewEmailUser"
                android:layout_below="@+id/editTextNameUser"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="31dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/editTextEmailUser"
                android:layout_below="@+id/textViewEmailUser"
                android:layout_alignLeft="@+id/editTextNameUser"
                android:layout_alignStart="@+id/editTextNameUser" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Senha"
                android:id="@+id/textViewSenhaUser"
                android:layout_marginTop="39dp"
                android:layout_below="@+id/editTextEmailUser"
                android:layout_alignRight="@+id/textViewEmailUser"
                android:layout_alignEnd="@+id/textViewEmailUser" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/editTextPassUser"
                android:layout_below="@+id/textViewSenhaUser"
                android:layout_alignLeft="@+id/editTextEmailUser"
                android:layout_alignStart="@+id/editTextEmailUser" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Confirme sua senha"
                android:id="@+id/textViewPass2User"
                android:layout_below="@+id/editTextPassUser"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="35dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/editTextPass2User"
                android:layout_below="@+id/textViewPass2User"
                android:layout_alignRight="@+id/editTextPassUser"
                android:layout_alignEnd="@+id/editTextPassUser" />

        </RelativeLayout>
    </ScrollView>




</RelativeLayout>
